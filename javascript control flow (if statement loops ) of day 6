<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Control Flow in JS</title>
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
    }

    input, button {
      margin-top: 10px;
      padding: 8px;
    }

    #result {
      margin-top: 15px;
    }
  </style>
</head>
<body>

  <h1>Check Even or Odd</h1>

  <input type="number" id="numberInput" placeholder="Enter a number">
  <button onclick="checkNumber()">Check</button>

  <div id="result"></div>

  <script>
    function checkNumber() {
      let num = document.getElementById("numberInput").value;

      if (num === "") {
        document.getElementById("result").innerText = "Please enter a number.";
        return;
      }

      num = parseInt(num);

      if (num % 2 === 0) {
        document.getElementById("result").innerText = num + " is even.";
      } else {
        document.getElementById("result").innerText = num + " is odd.";
      }

      // Loop example
      let list = "Numbers from 1 to " + num + ": ";
      for (let i = 1; i <= num; i++) {
        list += i + " ";
      }

      document.getElementById("result").innerText += "\n" + list;
    }
  </script>

</body>
</html>
