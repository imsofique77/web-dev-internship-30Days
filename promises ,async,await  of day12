  <meta charset="UTF-8" />
  <title>Async/Await and Promises</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    button {
      padding: 10px 15px;
      margin-top: 10px;
    }
    #output {
      margin-top: 15px;
      white-space: pre-line;
      color: #333;
    }
  </style>
</head>
<body>

  <h1>Async/Await & Promises Demo</h1>

  <button onclick="runAsync()">Run Async Function</button>

  <div id="output"></div>

  <script>
    // Function returning a Promise that sometimes fails
    function fakeFetch(success = true) {
      return new Promise((resolve, reject) => {
        setTimeout(() => {
          if(success) {
            resolve("Data loaded successfully!");
          } else {
            reject("Error: Something went wrong.");
          }
        }, 1500);
      });
    }

    // Async function using try/catch
    async function runAsync() {
      const output = document.getElementById("output");
      output.innerText = "Loading...";

      try {
        let data = await fakeFetch(false);  // Change to true to simulate success
        output.innerText = data;
      } catch (error) {
        output.innerText = error;
      }
    }
  </script>

</body>
</html>
